@model Chatly.Models.ChatRoomViewModel
@{
    ViewBag.Title = "Chat";
}

<style type="text/css">
    #txaChat {
        height: 400px;
        width: 600px;
    }

    #txaUsers {
        height: 400px;
        width: 100px;
    }

    #txbMessage {
        width: 600px;
    }
</style>
<h1 class="text-center mt-2">InfoServ Chat Room</h1>
<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-center">
            <form id="frmChat" method="post" action="home/" runat="server">
                <div class="row">
                    <div class="col-md-8">
                        <label for="txbUserName">Username:</label>
                        <div class="form-group d-flex">
                            <input type="text" class="form-control" id="txbUserName" placeholder="name" value=@Model.UserName>
                            <input id="btnJoin" type="button" class="btn btn-primary" value="Join" /><br />
                        </div>
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(m => m.CodeId)
                        @Html.DropDownListFor(m => m.CodeId, new SelectList(Model.Codes, "Id", "Code"), new { @class = "form-control", id = "ddl1" })
                        @Html.ValidationMessageFor(m => m.CodeId)
                    </div>
                </div>
                <textarea id="txaChat" rows="1" readonly="readonly"></textarea>
                <textarea id="txaUsers" name="S2" readonly="readonly" rows="2"></textarea>
                <br />
                <div class="control-form d-flex mt-3">
                    <input id="txbMessage" type="text" class="form-control" />
                    <input id="btnSend" type="button" class="ml-1 form-control btn btn-primary w-25" value="Send" />
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts {
    <script src="Scripts/jquery-1.10.2.min.js"></script>
    <!-- SignalR Lib -->
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!-- Chat Room Javascript (SignalR)-->
    <script src="~/Scripts/mpw-chat.js"></script>

    <script>
        $(document).ready(function () {
            //$("#btnJoin").click();

            $('#txbMessage').on("keypress", function (e) {
                var key = e.charCode ? e.charCode : e.keyCode ? e.keyCode : 0;
                if (key == 13) {
                    $("#btnSend").click();
                }
            });
            $("#ddl1").change(function () {
                $("#btnJoin").click();
            });
        });
    </script>
}